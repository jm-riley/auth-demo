doctype html
html
  head
      block head
        title=title
  body
    nav
      if user
        p Welcome, #{user.username}
        div
          a(href="/posts") All Posts
          a(href="/posts/new") Create a Post!
          form(action='/users/logout' method='post')
            button(type='submit') logout
      else
        div
          a(href='/users/login') Login
          a(href='/users/register') Register

    block content
